<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="恭喜您已经成功注册!"
                    android:textColor="#de2f3a" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建议您立即导入通讯录，看看好友们做了什么"
                    android:textColor="#999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp" >

                    <ImageView
                        android:id="@+id/person_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dip"
                        android:src="@drawable/picture" />

                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/person_icon"
                        android:layout_marginTop="21dip"
                        android:text="在领贷中同步手机通迅录可以 :"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="21dp"
                        android:lineSpacingExtra="10dip"
                        android:text="将领贷同业圈认识的好友添加到通讯录，保持资料最新状态"
                        android:textColor="#454545"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_2"
                        android:layout_centerHorizontal="true"
                        android:lineSpacingExtra="10dip"
                        android:text="在这里您可以分类客户，将客户资料同步到云端，随时管理永不丢失"
                        android:textColor="#454545"
                        android:textSize="12sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/get_addressbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button"
                    android:text="立即同步"
                    android:textColor="#FFFF"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/get_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="34dp"
                    android:gravity="center_horizontal"
                    android:text="了解详情"
                    android:textColor="#343434"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>