        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/section_auth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp" >

            <include layout="@layout/home_auth_first" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/section_contact_friends"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp" >

            <include layout="@layout/home_contact_first" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/section_upload_contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp" >

            <include layout="@layout/home_upload_contact" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/section_xdjl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
